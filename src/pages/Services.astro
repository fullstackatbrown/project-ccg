<script>  
    document.addEventListener("DOMContentLoaded", function() {
        let slideIndex = 0;
        let slideInterval;

        function showSlides() {
            let slides = document.getElementsByClassName("quote");
            if (slides.length === 0) return;

            for (let i = 0; i < slides.length; i++) {
                slides[i].style.display = "none";
            }
            if (slideIndex >= slides.length) slideIndex = 0;
            if (slideIndex < 0) slideIndex = slides.length - 1;

            slides[slideIndex].style.display = "block";
            slideInterval = setTimeout(showSlides, 7000);
        }

        function incrementSlides(n) {
            slideIndex += n;
            clearTimeout(slideInterval);
            showSlides();
        }

        document.querySelector(".next").addEventListener("click", () => incrementSlides(1));
        document.querySelector(".prev").addEventListener("click", () => incrementSlides(-1));
        showSlides();
    });

</script>
