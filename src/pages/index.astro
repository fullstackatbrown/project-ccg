---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
---

<Layout>
	<div class="flex flex-col min-h-screen">
		<Navbar />

		<!-- Hero Section -->
		<section class="relative w-full min-h-screen flex items-center justify-center">
			<!-- Background Image -->
			<img 
				src="/src/assets/images/hero.jpg" 
				alt="Hero Image" 
				class="absolute inset-0 w-full h-full object-cover object-center"
			>

			<!-- Darker Overlay -->
			<div class="absolute inset-0 bg-black opacity-35"></div>

			<!-- Centered Logo -->
			<div class="relative z-10 flex items-center justify-center">
				<img 
					src="/src/assets/logo_white.png" 
					alt="CCG Logo" 
					class="w-[90%] md:w-[70%] lg:w-[60%] max-w-4xl"
					>
			</div>
		</section>

		<!-- Additional Content for Scrolling -->
		<section class="w-full bg-white text-black py-20">
			<!-- Who Are We Section -->
			<div class="container mx-auto px-4 mb-20">
				<div class="flex flex-col md:flex-row items-start gap-8">
					<div class="md:w-1/3 mx-auto text-center mb-12">
						<h2 class="text-4xl md:text-5xl font-bold mb-6">WHO ARE WE?</h2>
						<div class="flex items-center justify-center mb-8">
							<div class="w-12 h-1 bg-red-700"></div>
							<div class="w-3 h-3 rounded-full bg-red-700 ml-1"></div>
							<div class="w-12 h-1 bg-red-700 ml-1"></div>
						</div>
					</div>					
					<div class="md:w-2/3">
						<p class="text-xl md:text-2xl font-light leading-relaxed">
							Collegiate Consulting Group empowers students with real-world consulting experience
							through hands-on projects, workshops, and forums. Our external consulting projects
							expose students to each phase of the consulting process—from problem definition to
							final implementation—offering practical training and industry insights.
						</p>
					</div>
				</div>
			</div>
		
			<!-- Stats Section -->
			<div class="container mx-auto px-4">
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
					<!-- Stat Box 1 -->
					<div class="bg-white p-6 rounded-lg shadow-lg text-center">
						<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">32</h3>
						<p class="text-xl font-light">Passionate Members</p>
					</div>
					
					<!-- Stat Box 2 -->
					<div class="bg-white p-6 rounded-lg shadow-lg text-center">
						<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">15</h3>
						<p class="text-xl font-light">Trusting Clients</p>
					</div>
					
					<!-- Stat Box 3 -->
					<div class="bg-white p-6 rounded-lg shadow-lg text-center">
						<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">70+</h3>
						<p class="text-xl font-light">Completed Projects</p>
					</div>
					
					<!-- Stat Box 4 -->
					<div class="bg-white p-6 rounded-lg shadow-lg text-center">
						<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">90+</h3>
						<p class="text-xl font-light">Success Stories</p>
					</div>
				</div>


			</div>
		</section>

		<section class="w-full bg-white text-black">
			<div class="w-full">
				<!-- Section 1: Services (Text Left, Image Right) -->
				<div class="flex flex-col md:flex-row items-stretch">
					<div class="w-full md:w-1/2 p-8 md:p-16 lg:p-24 flex flex-col justify-center bg-white">
						<h2 class="text-3xl md:text-4xl font-bold">Our Services</h2>
						<div class="flex items-center my-6">
							<div class="w-12 h-1 bg-red-700"></div>
							<div class="w-3 h-3 rounded-full bg-red-700 ml-1"></div>
						</div>
						<p class="text-lg text-gray-800">
							We provide comprehensive consulting solutions tailored to your business needs. Our expert team delivers actionable insights and strategic guidance.
						</p>
						<div class="mt-8">
							<a href="/Services" class="inline-flex items-center px-8 py-3 bg-red-700 text-white font-medium rounded-full hover:bg-red-800 transition-colors shadow-md">
								View Services
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
						</div>
					</div>
					<div class="w-full md:w-1/2 min-h-[400px]">
						<img src="/src/assets/images/group3.jpeg" alt="Services" class="w-full h-full object-cover">
					</div>
				</div>
		
				<!-- Section 2: Members (Text Right, Image Left) -->
				<div class="flex flex-col md:flex-row-reverse items-stretch">
					<div class="w-full md:w-1/2 p-8 md:p-16 lg:p-24 flex flex-col justify-center">
						<h2 class="text-3xl md:text-4xl font-bold">Our Team</h2>
						<div class="flex items-center my-6">
							<div class="w-12 h-1 bg-red-700"></div>
							<div class="w-3 h-3 rounded-full bg-red-700 ml-1"></div>
						</div>
						<p class="text-lg text-gray-800">
							Meet our diverse team of industry experts and consultants. With decades of experience, we bring unparalleled knowledge to every project.
						</p>
						<div class="mt-8">
							<a href="/Members" class="inline-flex items-center px-8 py-3 bg-red-700 text-white font-medium rounded-full hover:bg-red-800 transition-colors shadow-md">
								Meet Our Team
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
						</div>
					</div>
					<div class="w-full md:w-1/2 min-h-[400px] bg-white">
						<img src="/src/assets/images/group2.jpg" alt="Our Team" class="w-full h-full object-cover">
					</div>
				</div>
		
				<!-- Section 3: Projects (Text Left, Image Right) -->
				<div class="flex flex-col md:flex-row items-stretch">
					<div class="w-full md:w-1/2 p-8 md:p-16 lg:p-24 flex flex-col justify-center bg-white">
						<h2 class="text-3xl md:text-4xl font-bold">Our Projects</h2>
						<div class="flex items-center my-6">
							<div class="w-12 h-1 bg-red-700"></div>
							<div class="w-3 h-3 rounded-full bg-red-700 ml-1"></div>
						</div>
						<p class="text-lg text-gray-800">
							Explore our portfolio of successful projects and case studies. See how we've helped businesses transform challenges into opportunities.
						</p>
						<div class="mt-8">
							<a href="/Portfolio" class="inline-flex items-center px-8 py-3 bg-red-700 text-white font-medium rounded-full hover:bg-red-800 transition-colors shadow-md">
								View Projects
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
						</div>
					</div>
					<div class="w-full md:w-1/2 min-h-[400px]">
						<img src="/src/assets/images/smallgroup.jpeg" alt="Projects" class="w-full h-full object-cover">
					</div>
				</div>
		
				<!-- Section 4: Impact (Text Right, Image Left) -->
				<div class="flex flex-col md:flex-row-reverse items-stretch">
					<div class="w-full md:w-1/2 p-8 md:p-16 lg:p-24 flex flex-col justify-center">
						<h2 class="text-3xl md:text-4xl font-bold">Our Impact</h2>
						<div class="flex items-center my-6">
							<div class="w-12 h-1 bg-red-700"></div>
							<div class="w-3 h-3 rounded-full bg-red-700 ml-1"></div>
						</div>
						<p class="text-lg text-gray-800">
							See the measurable results and positive change we've created for our clients and communities. Our work makes a difference.
						</p>
						<div class="mt-8">
							<a href="/Recruitment" class="inline-flex items-center px-8 py-3 bg-red-700 text-white font-medium rounded-full hover:bg-red-800 transition-colors shadow-md">
								See Our Impact
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
						</div>
					</div>
					<div class="w-full md:w-1/2 min-h-[400px] bg-white">
						<img src="/src/assets/images/smallgroup2.jpeg" alt="Impact" class="w-full h-full object-cover">
					</div>
				</div>
			</div>
		</section>
		
		<!-- Annual Report Section -->
		<section class="w-full py-20 bg-white">
			<div class="container mx-auto px-4">
				<div class="max-w-4xl mx-auto text-center mb-12">
					<h2 class="text-4xl md:text-5xl font-bold mb-6">Annual Report</h2>
					<div class="flex items-center justify-center mb-8">
						<div class="w-12 h-1 bg-red-700"></div>
						<div class="w-3 h-3 rounded-full bg-red-700 ml-1"></div>
						<div class="w-12 h-1 bg-red-700 ml-1"></div>
					</div>
					<p class="text-xl text-gray-700">
						Discover our achievements, impact, and future directions in our latest annual report.
					</p>
				</div>
				
				<div class="flex flex-col md:flex-row bg-white rounded-lg shadow-xl overflow-hidden">
					<div class="w-full md:w-1/2">
						<img src="/src/assets/images/annualreport.png" alt="Annual Report" class="w-full max-w-sm h-auto object-cover mx-auto">
					</div>
					<div class="w-full md:w-1/2 p-8 md:p-12 flex flex-col justify-center">
						<h3 class="text-2xl md:text-3xl font-bold mb-4">2024 Annual Report</h3>
						<p class="text-lg text-gray-800 mb-6">
							Our latest annual report showcases our major accomplishments, financial health, and strategic plans for the future. Learn about our impact metrics, community initiatives, and sustainable practices.
						</p>
						<ul class="space-y-3 mb-8">
							<li class="flex items-start">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span>Financial highlights and growth metrics</span>
							</li>
							<li class="flex items-start">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span>Client success stories and testimonials</span>
							</li>
							<li class="flex items-start">
								<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-700 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
								</svg>
								<span>Strategic initiatives and future outlook</span>
							</li>
						</ul>
						<div>
							<a href="https://drive.google.com/file/d/1Aw0RdZ979MUWXhvcyrbGLgLnC4-39ftT/view" target="_blank" class="inline-flex items-center px-8 py-3 bg-red-700 text-white font-medium rounded-full hover:bg-red-800 transition-colors shadow-md">
								Read the Report
								<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
									<path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
								</svg>
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
		
		<section class="w-full py-20 bg-white text-black">
			<div class="container mx-auto px-4">
				<div class="max-w-4xl mx-auto text-center mb-12">
					<h2 class="text-4xl md:text-5xl font-bold mb-6">WHERE WE END UP</h2>
					<div class="flex items-center justify-center mb-8">
						<div class="w-12 h-1 bg-red-700"></div>
						<div class="w-3 h-3 rounded-full bg-red-700 ml-1"></div>
						<div class="w-12 h-1 bg-red-700 ml-1"></div>
					</div>
				</div>

				<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3 md:gap-5"> <!--maybe change the cols here when we get more images -->
					<!-- Company Logo 1 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/mckinsey.avif" alt="McKinsey" class="max-h-28 max-w-full object-contain">
					</div>
		
					<!-- Company Logo 2 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/amazon.avif" alt="Amazon" class="max-h-28 max-w-full object-contain">
					</div>
		
					<!-- Company Logo 3 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/blackrock.avif" alt="BlackRock" class="max-h-28 max-w-full object-contain">
					</div>
		
					<!-- Company Logo 4 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/eyparthenon.avif" alt="EY Parthenon" class="max-h-28 max-w-full object-contain">
					</div>
		
					<!-- Company Logo 5 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/evercore.jpeg" alt="Evercore" class="max-h-28 max-w-full object-contain">
					</div>
		
					<!-- Company Logo 6 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/bain.avif" alt="Bain & Company" class="max-h-28 max-w-full object-contain">
					</div>

					<!-- Company Logo 7 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/BCG.avif" alt="Boston Consulting Group" class="max-h-28 max-w-full object-contain">
					</div>

					<!-- Company Logo 8 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/goldmansachs.avif" alt="Goldman Sachs" class="max-h-28 max-w-full object-contain">
					</div>

					<!-- Company Logo 9 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/google.avif" alt="Google" class="max-h-28 max-w-[75%] object-contain">
					</div>

					<!-- Company Logo 10 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/whitehouse.png" alt="White House" class="max-h-28 max-w-full object-contain">
					</div>

					<!-- Company Logo 11 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/janestreet.avif" alt="Jane Street" class="max-h-28 max-w-[75%] object-contain">
					</div>

					<!-- Company Logo 12 -->
					<div class="flex items-center justify-center h-40">
						<img src="/src/assets/companies/adl.jpeg" alt="ADL" class="max-h-28 max-w-[75%] object-contain">
					</div>

				</div>
			</div>
		</section>
				
		<Footer></Footer>
	</div>
</Layout>
