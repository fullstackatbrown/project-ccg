---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';
---

<Layout>
	<div class="flex flex-col min-h-screen">
		<Navbar />

		<!-- Hero Section -->
		<section class="relative w-full min-h-screen flex items-center justify-center">
			<!-- Background Image -->
			<img 
				src="/src/assets/images/hero.jpg" 
				alt="Hero Image" 
				class="absolute inset-0 w-full h-full object-cover object-center"
			>

			<!-- Darker Overlay -->
			<div class="absolute inset-0 bg-black opacity-35"></div>

			<!-- Centered Logo -->
			<div class="relative z-10 flex items-center justify-center">
				<img 
					src="/src/assets/logo_white.png" 
					alt="CCG Logo" 
					class="w-[90%] md:w-[70%] lg:w-[60%] max-w-4xl"
					>
			</div>
		</section>

		<!-- Additional Content for Scrolling -->
		<section class="w-full min-h-screen bg-gray-100 flex items-center justify-center text-black">
			<div class="max-w-3xl text-center p-8">
				<h2 class="text-4xl font-bold mb-4">Welcome to CCG</h2>
				<p class="text-lg">
					This is a sample content section. Add more text, images, or any elements you need here.
				</p>
			</div>
		</section>

		<section class="w-full min-h-screen bg-white flex items-center justify-center text-black">
			<div class="max-w-3xl text-center p-8">
				<h2 class="text-4xl font-bold mb-4">More Information</h2>
				<p class="text-lg">
					Another section to ensure scrolling works. You can modify this to fit your needs.
				</p>
			</div>
		</section>
	</div>
</Layout>
