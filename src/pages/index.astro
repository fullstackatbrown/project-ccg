---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import '../styles/global.css';
---

<Layout>
	<div class="flex flex-col min-h-screen">
		<Navbar />

		<!-- Hero Section -->
		<section class="relative w-full min-h-screen flex items-center justify-center">
			<!-- Background Image -->
			<img 
				src="/src/assets/images/hero.jpg" 
				alt="Hero Image" 
				class="absolute inset-0 w-full h-full object-cover object-center"
			>

			<!-- Darker Overlay -->
			<div class="absolute inset-0 bg-black opacity-35"></div>

			<!-- Centered Logo -->
			<div class="relative z-10 flex items-center justify-center">
				<img 
					src="/src/assets/logo_white.png" 
					alt="CCG Logo" 
					class="w-[90%] md:w-[70%] lg:w-[60%] max-w-4xl"
					>
			</div>
		</section>

		<!-- Additional Content for Scrolling -->
	<section class="w-full min-h-screen bg-white text-black py-16">
		<!-- Who Are We Section -->
		<div class="container mx-auto px-4 mb-20">
		<div class="flex flex-col md:flex-row items-start gap-8">
			<div class="md:w-1/3">
			<h2 class="text-4xl md:text-7xl text-[#c32727] font-medium">WHO ARE WE?</h2>
			</div>
			<div class="md:w-2/3">
			<p class="text-xl md:text-2xl font-light leading-relaxed">
				Collegiate Consulting Group empowers students with real-world consulting experience
				through hands-on projects, workshops, and forums. Our external consulting projects
				expose students to each phase of the consulting process—from problem definition to
				final implementation—offering practical training and industry insights.
			</p>
			</div>
		</div>
		</div>
	
		<!-- Stats Section -->
		<div class="container mx-auto px-4">
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
			<!-- Stat Box 1 -->
			<div class="bg-white p-6 rounded-lg shadow-lg text-center">
			<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">32</h3>
			<p class="text-xl font-light">Passionate Members</p>
			</div>
			
			<!-- Stat Box 2 -->
			<div class="bg-white p-6 rounded-lg shadow-lg text-center">
			<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">15</h3>
			<p class="text-xl font-light">Trusting Clients</p>
			</div>
			
			<!-- Stat Box 3 -->
			<div class="bg-white p-6 rounded-lg shadow-lg text-center">
			<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">70+</h3>
			<p class="text-xl font-light">Completed Projects</p>
			</div>
			
			<!-- Stat Box 4 -->
			<div class="bg-white p-6 rounded-lg shadow-lg text-center">
			<h3 class="text-6xl md:text-7xl font-bold text-[#c32727] mb-2">90+</h3>
			<p class="text-xl font-light">Success Stories</p>
			</div>
		</div>
		</div>
	</section>

		<section class="w-full min-h-screen bg-gray-100 flex items-center justify-center text-black">
			<div class="max-w-3xl text-center p-8">
				<h2 class="text-5xl text-[#c32727] font-medium mb-4">WHERE WE END UP</h2>
				<p class="text-lg">
					Another section
				</p>
			</div>
		</section>
	</div>
</Layout>
