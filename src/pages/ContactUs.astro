---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ContactForm from '../components/ContactUS.astro';
import '../styles/global.css';
import ContactUS from '../components/ContactUS.astro';
---

<Layout>
	<div class="flex flex-col min-h-screen">
		<Navbar />

		<!-- Header Section with Background -->
		<section class="relative w-full h-[75vh] flex items-center justify-center overflow-hidden fade-in">
			<!-- Background Image -->
			<img 
				src="/src/assets/images/quietgreen.jpg" 
				alt="group photo" 
				class="relative min-w-full h-full object-cover object-center md:object-[50%_20%] scale-110 transition-all duration-700 fade-in-delay-1"
			>
		
			<!-- Dark Overlay (for contrast) -->
			<div class="absolute w-full h-full bg-black opacity-50"></div>
		
			<!-- Overlay Text -->
			<div class="absolute inset-0 flex flex-col items-start justify-end p-8 md:p-16 lg:p-24 fade-in">
				<h1 class="text-6xl md:text-7xl lg:text-8xl font-bold text-white mb-4" style="font-family: 'Almarai', sans-serif;">
					Contact Us
				</h1>
				<p class="text-xl md:text-2xl text-white opacity-90 max-w-2xl">
					Feedback? Any other comments? We'd love to hear from you.
				</p>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="w-full bg-white text-black py-16">
			<div class="container mx-auto px-4">
				<div class="max-w-3xl mx-auto text-center mb-12">
					<h2 class="text-4xl md:text-5xl text-[#c32727] font-medium mb-6">Questions? Feedback?</h2>
					<p class="text-xl md:text-2xl font-light">We'd love to hear from you.</p>
				</div>
				
				<div class="max-w-xl mx-auto">
					<ContactUS 
						accessKey="909c81fa-ed4d-4947-aad5-be8894020dc9" 
						submitButtonText="Send Message" 
					/>
				</div>
			</div>
		</section>
		

		<Footer />
	</div>
</Layout>