        {recruitment[0].images?.slice(5, 7).map((image, index) => (
          <img 
            key={index + 5}
            src={`https:${image.fields.file.url}`} 
            alt="Statistic" 
            class={`object-cover rounded ${index === 0 ? 'max-w-70 h-auto pr-2 pt-2' : 'max-w-50 h-auto'}`}
          />
