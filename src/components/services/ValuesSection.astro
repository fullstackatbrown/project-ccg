    /* Fade-in animation classes */
    .fade-in {
      opacity: 0;
      transform: translateY(30px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }
  
    .fade-in.visible {
      opacity: 1;
      transform: translateY(0);
    }
  
